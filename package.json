{
  "name": "nescore",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "classnames": "^2.3.1",
    "lodash": "^4.17.21",
    "nes.css": "^2.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^4.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "npm start",
    "testroms": "npm test src/__tests__",
    "build-lib": "cross-env NODE_ENV=production babel src/nes --out-dir build/lib --copy-files"
  },
  "eslintConfig": {
    "extends": "react-app",
    "overrides": [
      {
        "files": [
          "**/*.js?(x)"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off",
          "import/no-webpack-loader-syntax": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "husky": "^1.3.1",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "worker-loader": "^3.0.8"
  }
}
